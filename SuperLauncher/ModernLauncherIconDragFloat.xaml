<Window x:Class="SuperLauncher.ModernLauncherIconDragFloat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize" 
        SizeToContent="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Width="32"
        Height="32"
        Background="{x:Null}" 
        Loaded="Window_Loaded"
        Title="ModernLauncherIconDragFloat"
        ShowActivated="False" Closing="Window_Closing"
        >
    <Grid>
        <Image x:Name="Icon" Source="/Resources/logo_256.png" />
    </Grid>
</Window>
