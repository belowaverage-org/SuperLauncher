<UserControl x:Class="SuperLauncher.ModernLauncherExplorerButtons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuperLauncher"
      mc:Ignorable="d" 
      Width="90"
      Height="30">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/WinUI.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Button Style="{DynamicResource ExplorerButton}" Margin="0,1,62,1" FontFamily="{DynamicResource Icons}" Width="28" Height="28"></Button>
        <Button Style="{DynamicResource ExplorerButton}" Margin="30,1,32,1" FontFamily="{DynamicResource Icons}" Width="28" Height="28"></Button>
        <Button Style="{DynamicResource ExplorerButton}" Margin="62,1,0,1" FontFamily="{DynamicResource Icons}" Width="28" Height="28"></Button>
    </Grid>
</UserControl>
