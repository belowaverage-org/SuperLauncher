<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuperLauncher"
      x:Class="SuperLauncher.ModernLauncherContextMenuMain"
      mc:Ignorable="d"
      >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/WinUI.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <StackPanel >
        <local:ModernLauncherContextMenuButton Text="About Super Launcher" Icon="" />
        <Rectangle Fill="{DynamicResource BorderColorBrush}" Height="1" Margin="2" />
        <local:ModernLauncherContextMenuButton Text="Elevate" Icon="" />
        <local:ModernLauncherContextMenuButton Text="Run as" Icon="" />
        <Rectangle Fill="{DynamicResource BorderColorBrush}" Height="1" Margin="2" />
        <local:ModernLauncherContextMenuButton Text="View config" Icon="" />
        <local:ModernLauncherContextMenuButton Text="Settings" Icon="" />
        <Rectangle Fill="{DynamicResource BorderColorBrush}" Height="1" Margin="2" />
        <local:ModernLauncherContextMenuButton Text="Exit" Icon="" />
    </StackPanel>
</Page>
